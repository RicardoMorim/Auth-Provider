        +getUserByEmail(email: String): ResponseEntity<UserDTO>
        +updateUser(id: ID, request: CreateUserRequestDTO): ResponseEntity<UserDTO>
        +deleteUser(id: ID): ResponseEntity<Void>
    }
    
}

